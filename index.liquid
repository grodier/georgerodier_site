---
layout: base.liquid
---

<main class="flex flex-col space-y-4">
  <h1
    class="mx-auto text-3xl lg:text-4xl font-bold text-gray-900 border-b-2 border-b-emerald-400"
  >
    Latest Posts
  </h1>
  <ul class="mx-auto divide-y divide-slate-200">
    {%- for post in collections.posts -%}
    <li class="py-6">
      <a href="{{ post.url }}" class="group"
        ><div>
          <span class="group-hover:underline text-lg font-semibold">{{
            post.data.title
          }}</span>
          <div>{{ post.data.description }}</div>
        </div></a
      >
    </li>
    {%- endfor -%}
  </ul>
</main>

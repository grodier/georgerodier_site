---
layout: base.liquid
---

<main>
  <article class="flex flex-col space-y-10">
    <div class="mx-auto space-y-3 flex flex-col items-center">
      <h1
        class="text-2xl md:text-3xl lg:text-5xl font-bold text-gray-900 border-b-2 border-b-emerald-400 sm:tracking-tight"
      >
        {{ title }}
      </h1>
      <div class="flex space-x-3 items-center justify-center">
        <div class="flex space-x-2 items-center">
          <img
            height="40px"
            width="40px"
            class="object-cover shadow-xl rounded-full"
            src="/img/georgeprofile.jpeg"
          /><em>By: {{ author | default: "George Rodier" }} </em>
        </div>
        <div>|</div>
        <div>
          <em>{{ publishedDate | cleanDate }}</em>
        </div>
      </div>
    </div>
    <div class="mx-auto prose md:prose-lg xl:prose-xl">{{ content }}</div>
  </article>
</main>
